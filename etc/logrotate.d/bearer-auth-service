# Replace the path with the path of the logfiles on the host
/root/bearer-auth-service/logs/*.log {
  size 20M
  daily
  rotate 14
  missingok
  notifempty
  compress
  delaycompress
  create 0644 root root
  postrotate
    # Send USR1 so the app reopens the log files
    docker kill --signal="USR1" auth-service >/dev/null 2>&1 || true
  endscript
}